CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(NAME):
	$(CC) $(CFLAGS) -c $(SRC)
	$(CC) $(OBJ) -o $(NAME)

clean:
	@$(RM) *~ $(NAME) 2>/dev/null || true

oclean:
	@$(RM) $(OBJ) 2>/dev/null || true

fclean: clean oclean

re: oclean all

